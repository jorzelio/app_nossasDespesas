<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentCadastroDespesa"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cor_fundo_cadastro">

    <TextView
        android:id="@+id/txtSelecionaData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="  Selecione a data"
        android:textSize="25sp"
        app:drawableStartCompat="@drawable/ic_calendar" />

    <TextView
        android:id="@+id/txtSelecionaCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="  Selecione a categoria "
        android:textSize="25sp"
        app:drawableStartCompat="@drawable/ic_expandir" />

    <TextView
        android:id="@+id/txtInformaDespesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="  Informe a despesa "
        android:textSize="25sp"
        app:drawableStartCompat="@drawable/ic_edit" />

    <TextView
        android:id="@+id/txtRepetir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:text="  Repetir "
        android:textSize="25sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_repeat" />
    <TextView
        android:id="@+id/txtDivideCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:text="  Dividir com  "
        android:textSize="25sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_group" />

</LinearLayout>